{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "1.4",
    "default_locale": "en",
    "manifest_version": 3,
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_title": "__MSG_appName__"
    },
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "content_scripts": [
        {
          "js": ["content.js"],
          "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage", "unlimitedStorage", "contextMenus"],
    "browser_specific_settings": {
        "gecko": {
            "id": "FoxyPGP@FoxyPGP"
        }
    }
}
