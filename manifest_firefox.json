{
    "name": "FoxyPGP",
    "description": "PGP integration for web browsers!",
    "version": "1.2",
    "manifest_version": 3,
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_title": "FoxyPGP"
    },
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "content_scripts": [
        {
          "js": ["content.js"],
          "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage", "unlimitedStorage", "contextMenus"],
    "browser_specific_settings": {
        "gecko": {
            "id": "FoxyPGP@FoxyPGP"
        }
    }
}
